{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // Change this to NodeNext
    "moduleResolution": "NodeNext", // Keep this as NodeNext
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*.ts",
    "generate-model.ts",
    "sequelize.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
